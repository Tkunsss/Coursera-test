  <script>
    function showLoveNote(noteNumber) {
      document.querySelectorAll('.love-note').forEach(function(note) {
        note.style.display = 'none';
      });
      document.getElementById('loveNote' + noteNumber).style.display = 'block';
    }
  </script>
